<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pierre.brelaud.channelmessaging.LoginActivity"
    android:id="@+id/llBackground"
    android:background="#ecf0f1"
    android:weightSum="1">

    <ImageView
        android:layout_width="506dp"
        android:layout_height="170dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/imageView"
        android:src="@drawable/channel_messaging_logo"
        android:layout_gravity="center_horizontal"
        android:background="#3498db"
        android:padding="16dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="#34495e">

        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Identifiant"
            android:textColor="#34495e"
            android:textColorHighlight="#34495e"
            android:textColorLink="#34495e"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_id"
        android:layout_width="match_parent"00.
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="#34495e">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Mot de passe"
            android:textColor="#34495e"
            android:textColorLink="#34495e"
            android:textColorHighlight="#34495e"
            android:layout_marginBottom="40dp"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/btnValider"
        android:layout_marginTop="38dp"
        android:textColor="#ecf0f1"
        android:background="#3498db"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:layout_margin="16dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Connectez vous pour accéder à la messagerie instantanée"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textColor="#34495e"
        android:textAlignment="center" />

</LinearLayout>
